{
    "name": "firelighter-cms",
    "version": "0.0.1",
    "author": "OCSoft42",
    "description": "A lean CMS for Firebase simular to FireCMS but using SvelteKit.",
    "keywords": [
        "CMS",
        "Firebase",
        "lean",
        "sveltekit"
    ],
    "private": true,
    "type": "module",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "host:beta": "firebase --project firelighter-cms deploy --only hosting:beta",
        "host:prod": "firebase --project firelighter-cms deploy --only hosting:prod",
        "test": "vitest",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@fontsource/fira-mono": "^4.5.10",
        "@neoconfetti/svelte": "^1.0.0",
        "@sveltejs/adapter-auto": "^3.2.2",
        "@sveltejs/kit": "^2.5.17",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@types/eslint": "8.56.0",
        "@types/luxon": "^3.4.2",
        "@types/object-hash": "^3.0.6",
        "@types/tabulator-tables": "^6.2.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vite-pwa/sveltekit": "^0.3.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.40.0",
        "firebase": "^10.12.2",
        "json5": "^2.2.3",
        "luxon": "^3.4.4",
        "marked": "^13.0.0",
        "nanoid": "^5.0.7",
        "object-hash": "^3.0.0",
        "prettier": "^3.3.2",
        "prettier-plugin-svelte": "^3.2.5",
        "rxfire": "^6.0.5",
        "rxjs": "^7.8.1",
        "svelte": "^4.2.18",
        "svelte-check": "^3.8.1",
        "svelte-jsoneditor": "^0.23.7",
        "tabulator-tables": "^6.2.1",
        "tslib": "^2.6.3",
        "typescript": "^5.5.2",
        "vite": "^5.3.1",
        "vitest": "^1.6.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ortwic/firelighter-cms.git"
    },
    "bugs": {
        "url": "https://github.com/ortwic/firelighter-cms/issues"
    },
    "homepage": "https://firelighter-cms.web.app"
}
