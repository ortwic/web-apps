{
  "name": "fl-cms",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "dev": "vite",
    "build": "pnpm test && vite build",
    "preview": "vite preview",
    "host:beta": "pnpm build && firebase deploy --only hosting:beta",
    "host:prod": "firebase deploy --only hosting:prod",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "test": "firebase emulators:exec --only firestore 'pnpm vitest run'",
    "test:debug": "firebase emulators:exec --only firestore 'pnpm vitest --inspect-brk --browser --no-file-parallelism'",
    "test:watch": "firebase emulators:exec --only firestore 'pnpm vitest'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/svelte": "^5.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/luxon": "^3.4.2",
    "@types/marked": "^5.0.0",
    "@types/object-hash": "^3.0.6",
    "@types/tabulator-tables": "^6.2.2",
    "@web-apps/svelte-tabulator": "workspace:^",
    "firebase": "^10.12.4",
    "jsdom": "^22.1.0",
    "json5": "^2.2.3",
    "luxon": "^3.4.4",
    "marked": "^5.1.1",
    "nanoid": "^5.0.7",
    "object-hash": "^3.0.0",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "svelte-i18n": "^3.7.0",
    "svelte-jsoneditor": "^0.23.7",
    "svelte-spa-router": "^3.3.0",
    "tabulator-tables": "^6.2.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^1.6.0"
  }
}
