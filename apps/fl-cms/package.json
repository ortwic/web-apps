{
  "name": "Fl-CMS",
  "private": true,
  "version": "0.1.4",
  "description": "A minimal and lean browser-based headless CMS for Firebase",
  "author": "OCSoft42",
  "license": "BSD 3-Clause",
  "type": "module",
  "packageManager": "pnpm@9.1.4",
  "homepage": "https://github.com/ortwic/web-apps/tree/main/apps/fl-cms",
  "funding": "https://liberapay.com/OCSoft42/donate",
  "bugs": {
    "url": "https://github.com/ortwic/web-apps/issues"
  },
  "keywords": [
    "cms",
    "firebase",
    "headless",
    "markdown",
    "content management",
    "content management system",
    "content editor"
  ],
  "scripts": {
    "dev": "vite",
    "fbem": "firebase emulators:start --only auth,firestore,storage --project=emulator --import firestore.local --export-on-exit",
    "build": "pnpm test:once && vite build",
    "build:icons": "node scripts/export-icons.mjs",
    "preview": "vite preview",
    "host:beta": "pnpm build && firebase deploy -P firelighter-cms --only hosting:beta",
    "host:prod": "firebase -P firelighter-cms deploy --only hosting:prod",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "spec": "pnpm vitest spec --testTimeout 0",
    "test": "firebase emulators:exec --only firestore 'pnpm vitest'",
    "test:browser": "firebase emulators:exec --only firestore 'pnpm vitest --inspect-brk --browser --no-file-parallelism'",
    "test:debug": "firebase emulators:exec --only firestore 'pnpm vitest --testTimeout 0'",
    "test:once": "firebase emulators:exec --only firestore 'pnpm vitest run'",
    "schema:properties": "ts-json-schema-generator -p src/lib/packages/firecms_core/types/properties.explicit.ts -t PropertyRecord -o src/lib/schema/generated/property-record.schema.json"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/language": "^6.11.3",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.19.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/svelte": "^5.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/json-schema": "^7.0.15",
    "@types/luxon": "^3.4.2",
    "@types/marked": "^5.0.0",
    "@types/object-hash": "^3.0.6",
    "@vitest/browser": "^3.1.4",
    "@web-apps/svelte-tabulator": "workspace:^",
    "ajv": "^8.17.1",
    "better-ajv-errors": "^2.0.2",
    "bytemd": "^1.22.0",
    "codemirror": "^6.0.2",
    "codemirror-json-schema": "^0.8.1",
    "codemirror-json5": "^1.0.3",
    "firebase": "^12.6.0",
    "jsdom": "^22.1.0",
    "json5": "^2.2.3",
    "luxon": "^3.4.4",
    "marked": "^5.1.1",
    "nanoid": "^5.0.7",
    "object-hash": "^3.0.0",
    "rxfire": "^6.1.0",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "svelte-collapse": "^0.1.4",
    "svelte-i18n": "^3.7.0",
    "svelte-spa-router": "^3.3.0",
    "ts-deepmerge": "^7.0.3",
    "ts-json-schema-generator": "^2.4.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-pwa": "^0.16.7",
    "vitest": "^3.1.4"
  }
}
